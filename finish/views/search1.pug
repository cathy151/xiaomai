doctype html
html
    head
        meta(charset='utf-8')
        title 营养查询
        meta(name='description', content='食品营养')
        meta(name='keywords', content='食品营养')
        meta(name='viewport', content='initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/amazeui.min.css')
        script(type='text/javascript',  src='/javascripts/jquery.min.js')
        script(type='text/javascript',  src='/javascripts/amazeui.min.js')
        script(type='text/javascript',  src='/javascripts/vue.js')
        script(type='text/javascript',  src='/javascripts/vue-resource.min.js')
    body
        #showVuew
            header(class=['am-header', 'am-header-default', 'header'], data-am-widget='header')
                div(class=['am-header-left', 'am-header-nav'])
                    a(href='/index')
                        i(class=['am-header-icon', 'am-icon-angle-left'])
                h1.am-header-title
                    a(href='#title-link', style='color: #333;') 营养查询
                div(class=['am-header-right', 'am-header-nav'])
                    a(href='#right-link')
            .search-input
                input(type='text', placeholder='请输入您搜索的食材',v-model="keyword")
                button.sousuo(@click='search') 搜索
            ul(class=['am-gallery.am-avg-sm-2', 'am-avg-md-3.am-avg-lg-4', 'am-gallery-default', 'product'], data-am-widget='gallery')
                template(lang='pug')
                    li(v-for='infos in arr')
                        .am-gallery-item
                            img(v-bind:src='infos.img', alt='')
                            h3.am-gallery-title {{infos.name}}
                            p {{infos.p}}
                button#refresh(@click='refresh',class="sousuo") 刷新
        script(type='text/javascript',  src='/javascripts/search1.js')